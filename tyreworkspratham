import React, { useState, useEffect, useRef } from 'react';
import { motion, AnimatePresence } from 'framer-motion';

const WheelTireShop = () => {
  const [activeTab, setActiveTab] = useState('wheels');
  const [currentSlide, setCurrentSlide] = useState(0);
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const tireRef = useRef<HTMLDivElement>(null);
  const wheelRefs = useRef<(HTMLDivElement | null)[]>([]);

  // Auto-rotate hero tire
  useEffect(() => {
    const rotateTire = () => {
      if (tireRef.current) {
        const rotation = (Date.now() / 20) % 360;
        tireRef.current.style.transform = `rotate(${rotation}deg)`;
      }
    };

    const interval = setInterval(rotateTire, 16);
    return () => clearInterval(interval);
  }, []);

  // Auto-rotate product wheels on hover
  useEffect(() => {
    const handleMouseMove = (e: MouseEvent) => {
      wheelRefs.current.forEach((wheel, index) => {
        if (wheel && wheel.matches(':hover')) {
          const rect = wheel.getBoundingClientRect();
          const centerX = rect.left + rect.width / 2;
          const centerY = rect.top + rect.height / 2;
          const angle = Math.atan2(e.clientY - centerY, e.clientX - centerX) * 180 / Math.PI;
          wheel.style.transform = `rotate(${angle}deg)`;
        }
      });
    };

    window.addEventListener('mousemove', handleMouseMove);
    return () => window.removeEventListener('mousemove', handleMouseMove);
  }, []);

  // Auto-advance slides
  useEffect(() => {
    const interval = setInterval(() => {
      setCurrentSlide((prev) => (prev + 1) % 3);
    }, 5000);
    return () => clearInterval(interval);
  }, []);

  const services = [
    {
      title: "Wheel Installation",
      description: "Professional wheel mounting and balancing",
      icon: "‚öôÔ∏è"
    },
    {
      title: "Tire Sales",
      description: "Wide selection of premium tires",
      icon: "üõû"
    },
    {
      title: "Alignment",
      description: "Precision wheel alignment services",
      icon: "üìê"
    },
    {
      title: "Repair",
      description: "Expert wheel and tire repairs",
      icon: "üîß"
    }
  ];

  const products = {
    wheels: [
      { name: "Sport Rims", price: "$299", image: "https://placeholder-image-service.onrender.com/image/300x300?prompt=sport+car+wheel+rim+chrome+design&id=wheel1" },
      { name: "Alloy Wheels", price: "$399", image: "https://placeholder-image-service.onrender.com/image/300x300?prompt=modern+alloy+wheel+silver+finish&id=wheel2" },
      { name: "Custom Rims", price: "$499", image: "https://placeholder-image-service.onrender.com/image/300x300?prompt=custom+car+wheel+black+red+accent&id=wheel3" },
      { name: "Premium Wheels", price: "$599", image: "https://placeholder-image-service.onrender.com/image/300x300?prompt=premium+luxury+car+wheel+design&id=wheel4" }
    ],
    tires: [
      { name: "All-Season Tires", price: "$199", image: "https://placeholder-image-service.onrender.com/image/300x300?prompt=all+season+car+tire+tread&id=tire1" },
      { name: "Performance Tires", price: "$299", image: "https://placeholder-image-service.onrender.com/image/300x300?prompt=high+performance+racing+tire&id=tire2" },
      { name: "Winter Tires", price: "$249", image: "https://placeholder-image-service.onrender.com/image/300x300?prompt=winter+snow+tire+deep+tread&id=tire3" },
      { name: "Off-Road Tires", price: "$349", image: "https://placeholder-image-service.onrender.com/image/300x300?prompt=off+road+truck+tire+aggressive+tread&id=tire4" }
    ]
  };

  const testimonials = [
    {
      name: "Sarah Johnson",
      text: "Amazing service! They installed my new rims perfectly and the pricing was very reasonable.",
      date: "2024-01-15"
    },
    {
      name: "Mike Thompson",
      text: "Fast and professional tire installation. Will definitely come back for my next set.",
      date: "2024-02-10"
    },
    {
      name: "Jessica Lee",
      text: "Great selection of wheels and excellent customer service. Highly recommended!",
      date: "2024-03-05"
    }
  ];

  return (
    <div className="min-h-screen bg-background text-foreground font-sans overflow-x-hidden">
      {/* Navigation */}
      <nav className="bg-primary text-primary-foreground py-4 px-6 sticky top-0 z-50 shadow-md">
        <div className="max-w-7xl mx-auto flex justify-between items-center">
          <motion.div 
            initial={{ opacity: 0, x: -20 }}
            animate={{ opacity: 1, x: 0 }}
            className="text-2xl font-bold"
          >
            WheelWorks
          </motion.div>
          
          {/* Desktop Navigation */}
          <div className="hidden md:flex space-x-8">
            {['Home', 'Products', 'Services', 'Gallery', 'Contact'].map((item) => (
              <motion.a
                key={item}
                href={`#${item.toLowerCase()}`}
                whileHover={{ scale: 1.05 }}
                whileTap={{ scale: 0.95 }}
                className="hover:text-accent transition-colors duration-200"
              >
                {item}
              </motion.a>
            ))}
          </div>

          {/* Mobile Menu Button */}
          <button
            className="md:hidden"
            onClick={() => setIsMenuOpen(!isMenuOpen)}
          >
            <div className="w-6 h-0.5 bg-white mb-1.5"></div>
            <div className="w-6 h-0.5 bg-white mb-1.5"></div>
            <div className="w-6 h-0.5 bg-white"></div>
          </button>
        </div>

        {/* Mobile Menu */}
        <AnimatePresence>
          {isMenuOpen && (
            <motion.div
              initial={{ opacity: 0, height: 0 }}
              animate={{ opacity: 1, height: 'auto' }}
              exit={{ opacity: 0, height: 0 }}
              className="md:hidden bg-primary-dark mt-4 p-4"
            >
              {['Home', 'Products', 'Services', 'Gallery', 'Contact'].map((item) => (
                <motion.a
                  key={item}
                  href={`#${item.toLowerCase()}`}
                  className="block py-2 hover:text-accent transition-colors duration-200"
                  onClick={() => setIsMenuOpen(false)}
                >
                  {item}
                </motion.a>
              ))}
            </motion.div>
          )}
        </AnimatePresence>
      </nav>

      {/* Hero Section */}
      <section id="home" className="relative h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-gray-900 to-gray-800">
        <div className="absolute inset-0 bg-black/40"></div>
        
        {/* Animated Background Elements */}
        <motion.div
          className="absolute top-1/4 left-1/4 w-32 h-32 rounded-full border-2 border-accent/30"
          animate={{
            scale: [1, 1.2, 1],
            opacity: [0.3, 0.5, 0.3]
          }}
          transition={{
            duration: 4,
            repeat: Infinity,
            ease: "easeInOut"
          }}
        />
        
        <motion.div
          className="absolute bottom-1/3 right-1/4 w-20 h-20 rounded-full border-2 border-primary/30"
          animate={{
            scale: [1.2, 1, 1.2],
            opacity: [0.4, 0.6, 0.4]
          }}
          transition={{
            duration: 3,
            repeat: Infinity,
            ease: "easeInOut",
            delay: 1
          }}
        />

        <div className="relative z-10 text-center text-white px-4">
          <motion.h1 
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.8 }}
            className="text-5xl md:text-7xl font-bold mb-6"
          >
            Premium Wheels & Tires
          </motion.h1>
          
          <motion.p 
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.8, delay: 0.2 }}
            className="text-xl md:text-2xl mb-8 max-w-3xl mx-auto"
          >
            Transform your ride with our exceptional collection and expert installation services
          </motion.p>

          {/* Animated Tire */}
          <motion.div
            ref={tireRef}
            className="w-48 h-48 md:w-64 md:h-64 mx-auto mb-8 rounded-full border-8 border-white/20 relative"
            initial={{ scale: 0 }}
            animate={{ scale: 1 }}
            transition={{ duration: 1, delay: 0.5 }}
          >
            {/* Tire tread pattern */}
            <div className="absolute inset-4 bg-gray-700 rounded-full">
              <div className="absolute top-1/2 left-0 right-0 h-2 bg-gray-600 transform -translate-y-1/2"></div>
              <div className="absolute top-1/2 left-0 right-0 h-2 bg-gray-600 transform -translate-y-1/2 rotate-45"></div>
              <div className="absolute top-1/2 left-0 right-0 h-2 bg-gray-600 transform -translate-y-1/2 rotate-90"></div>
              <div className="absolute top-1/2 left-0 right-0 h-2 bg-gray-600 transform -translate-y-1/2 rotate-135"></div>
            </div>
            
            {/* Center hub */}
            <div className="absolute inset-8 bg-gray-800 rounded-full flex items-center justify-center">
              <div className="w-8 h-8 bg-accent rounded-full"></div>
            </div>
          </motion.div>

          <motion.button
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.8, delay: 0.4 }}
            whileHover={{ scale: 1.05 }}
            whileTap={{ scale: 0.95 }}
            className="bg-accent text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-accent/90 transition-colors duration-200"
          >
            Explore Collection
          </motion.button>
        </div>
      </section>

      {/* Products Section */}
      <section id="products" className="py-20 bg-muted">
        <div className="max-w-7xl mx-auto px-4">
          <motion.h2 
            initial={{ opacity: 0, y: 20 }}
            whileInView={{ opacity: 1, y: 0 }}
            viewport={{ once: true }}
            className="text-4xl font-bold text-center mb-12"
          >
            Our Products
          </motion.h2>

          {/* Product Tabs */}
          <div className="flex justify-center mb-12">
            {['wheels', 'tires'].map((tab) => (
              <motion.button
                key={tab}
                onClick={() => setActiveTab(tab)}
                className={`px-8 py-3 mx-2 rounded-full font-semibold transition-all duration-300 ${
                  activeTab === tab 
                    ? 'bg-primary text-primary-foreground' 
                    : 'bg-secondary text-secondary-foreground hover:bg-secondary/80'
                }`}
                whileHover={{ scale: 1.05 }}
                whileTap={{ scale: 0.95 }}
              >
                {tab.charAt(0).toUpperCase() + tab.slice(1)}
              </motion.button>
            ))}
          </div>

          {/* Product Grid */}
          <motion.div 
            key={activeTab}
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            transition={{ duration: 0.5 }}
            className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
          >
            {products[activeTab as keyof typeof products].map((product, index) => (
              <motion.div
                key={product.name}
                initial={{ opacity: 0, y: 20 }}
                whileInView={{ opacity: 1, y: 0 }}
                viewport={{ once: true }}
                transition={{ duration: 0.5, delay: index * 0.1 }}
                className="bg-background rounded-lg shadow-lg overflow-hidden group cursor-pointer"
                whileHover={{ y: -8 }}
              >
                <div className="relative h-48 overflow-hidden">
                  <motion.div
                    ref={(el) => (wheelRefs.current[index] = el)}
                    className="w-full h-full flex items-center justify-center p-6"
                  >
                    <img 
                      src={product.image} 
                      alt={`${product.name} product image`}
                      className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    />
                  </motion.div>
                </div>
                <div className="p-6">
                  <h3 className="font-semibold text-lg mb-2">{product.name}</h3>
                  <p className="text-primary font-bold">{product.price}</p>
                  <motion.button
                    whileHover={{ scale: 1.05 }}
                    whileTap={{ scale: 0.95 }}
                    className="w-full mt-4 bg-primary text-primary-foreground py-2 rounded-md hover:bg-primary/90 transition-colors duration-200"
                  >
                    View Details
                  </motion.button>
                </div>
              </motion.div>
            ))}
          </motion.div>
        </div>
      </section>

      {/* Services Section */}
      <section id="services" className="py-20 bg-background">
        <div className="max-w-7xl mx-auto px-4">
          <motion.h2 
            initial={{ opacity: 0, y: 20 }}
            whileInView={{ opacity: 1, y: 0 }}
            viewport={{ once: true }}
            className="text-4xl font-bold text-center mb-16"
          >
            Our Services
          </motion.h2>

          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {services.map((service, index) => (
              <motion.div
                key={service.title}
                initial={{ opacity: 0, y: 20 }}
                whileInView={{ opacity: 1, y: 0 }}
                viewport={{ once: true }}
                transition={{ duration: 0.5, delay: index * 0.1 }}
                className="text-center p-6 bg-muted rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300"
                whileHover={{ y: -5 }}
              >
                <motion.div
                  className="text-4xl mb-4"
                  animate={{ 
                    scale: [1, 1.1, 1],
                    rotate: [0, 5, -5, 0]
                  }}
                  transition={{ 
                    duration: 2,
                    repeat: Infinity,
                    repeatDelay: 3
                  }}
                >
                  {service.icon}
                </motion.div>
                <h3 className="font-semibold text-lg mb-2">{service.title}</h3>
                <p className="text-muted-foreground">{service.description}</p>
              </motion.div>
            ))}
          </div>
        </div>
      </section>

      {/* Testimonials Carousel */}
      <section className="py-20 bg-gradient-to-r from-primary to-primary/80 text-primary-foreground">
        <div className="max-w-7xl mx-auto px-4">
          <motion.h2 
            initial={{ opacity: 0, y: 20 }}
            whileInView={{ opacity: 1, y: 0 }}
            viewport={{ once: true }}
            className="text-4xl font-bold text-center mb-16"
          >
            What Our Customers Say
          </motion.h2>

          <div className="relative h-64 overflow-hidden">
            <AnimatePresence mode="wait">
              <motion.div
                key={currentSlide}
                initial={{ opacity: 0, x: 100 }}
                animate={{ opacity: 1, x: 0 }}
                exit={{ opacity: 0, x: -100 }}
                transition={{ duration: 0.5 }}
                className="absolute inset-0 flex items-center justify-center"
              >
                <div className="text-center max-w-2xl mx-auto">
                  <p className="text-xl italic mb-4">"{testimonials[currentSlide].text}"</p>
                  <p className="font-semibold">{testimonials[currentSlide].name}</p>
                  <p className="text-sm opacity-80">{new Date(testimonials[currentSlide].date).toLocaleDateString()}</p>
                </div>
              </motion.div>
            </AnimatePresence>
          </div>

          {/* Navigation Dots */}
          <div className="flex justify-center mt-8 space-x-2">
            {[0, 1, 2].map((index) => (
              <button
                key={index}
                onClick={() => setCurrentSlide(index)}
                className={`w-3 h-3 rounded-full transition-all duration-300 ${
                  currentSlide === index ? 'bg-white' : 'bg-white/50'
                }`}
              />
            ))}
          </div>
        </div>
      </section>

      {/* Call to Action */}
      <section className="py-20 bg-accent text-accent-foreground">
        <div className="max-w-4xl mx-auto text-center px-4">
          <motion.h2 
            initial={{ opacity: 0, y: 20 }}
            whileInView={{ opacity: 1, y: 0 }}
            viewport={{ once: true }}
            className="text-4xl font-bold mb-6"
          >
            Ready to Upgrade Your Ride?
          </motion.h2>
          <motion.p 
            initial={{ opacity: 0, y: 20 }}
            whileInView={{ opacity: 1, y: 0 }}
            viewport={{ once: true }}
            transition={{ delay: 0.2 }}
            className="text-xl mb-8"
          >
            Visit our showroom or schedule a consultation today!
          </motion.p>
          <motion.button
            initial={{ opacity: 0, y: 20 }}
            whileInView={{ opacity: 1, y: 0 }}
            viewport={{ once: true }}
            transition={{ delay: 0.4 }}
            whileHover={{ scale: 1.05 }}
            whileTap={{ scale: 0.95 }}
            className="bg-white text-accent px-8 py-4 rounded-full text-lg font-semibold hover:bg-gray-100 transition-colors duration-200"
          >
            Contact Us Now
          </motion.button>
        </div>
      </section>

      {/* Footer */}
      <footer className="bg-gray-900 text-white py-12">
        <div className="max-w-7xl mx-auto px-4 text-center">
          <p>&copy; 2024 WheelWorks. All rights reserved.</p>
          <p className="mt-2 text-gray-400">Premium Wheel & Tire Services</p>
        </div>
      </footer>
    </div>
  );
};

export default WheelTireShop;
